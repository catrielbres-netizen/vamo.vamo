rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
        // In a real app, you would get custom claims instead of reading a document.
        // This is okay for prototyping.
        return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isRideParticipant(ride) {
        return request.auth.uid == ride.passengerId || request.auth.uid == ride.driverId;
    }


    // --- USERS ---
    match /users/{userId} {
      // Any authenticated user can create their own profile.
      allow create: if isAuthenticated();

      // Only the owner or an admin can read/update their profile.
      allow get, update, delete: if isOwner(userId) || isAdmin();
      
      // Admins can list all users.
      allow list: if isAdmin();
    }

    // --- RIDES ---
    match /rides/{rideId} {
      // Any authenticated user can create a ride request.
      allow create: if isAuthenticated();
      
      // Queries on the collection are allowed for any authenticated user.
      // Security is enforced by the queries themselves (e.g., where('passengerId', '==', uid)).
      allow list: if isAuthenticated();

      // Individual ride documents can only be read by participants or admins.
      allow get: if isAuthenticated() && (isRideParticipant(resource.data) || isAdmin());

      // Rides can be updated by participants or admins.
      allow update: if isAuthenticated() && (isRideParticipant(resource.data) || isAdmin());
      
      // Deletes are disallowed to preserve ride history. An admin could "cancel" a ride by changing its status.
      allow delete: if false;
    }

    // --- DRIVER SUMMARIES ---
    match /driver_summaries/{summaryId} {
        // A driver can create/update their own summary.
        allow create, update: if isAuthenticated() && isOwner(resource.data.driverId);

        // Drivers can read their own summaries. Admins can read any summary.
        allow get: if isAuthenticated() && (isOwner(resource.data.driverId) || isAdmin());

        // Only admins can list all summaries.
        allow list: if isAdmin();
    }
    
    // --- AUDIT LOGS ---
    match /auditLogs/{logId} {
       // Only admins can read or write audit logs.
      allow read, write: if isAdmin();
    }
  }
}
