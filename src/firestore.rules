rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para Perfiles de Usuario
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer y escribir perfiles.
      // 'read' incluye 'get' y 'list'. 'write' incluye 'create', 'update', 'delete'.
      allow read, write: if request.auth != null;
    }

    // Reglas para Viajes
    match /rides/{rideId} {
      // Cualquier usuario autenticado puede leer (get, list) y escribir (create, update, delete) en la colección de viajes.
      allow read, write: if request.auth != null;
    }

    // Reglas para Resúmenes de Conductores
    match /driver_summaries/{summaryId} {
      // Cualquier usuario autenticado puede leer y escribir resúmenes.
      allow read, write: if request.auth != null;
    }
    
    // Reglas para Logs de Auditoría
    match /auditLogs/{logId} {
       // Cualquier usuario autenticado puede leer y escribir en los logs de auditoría.
      allow read, write: if request.auth != null;
    }
  }
}
