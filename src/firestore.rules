rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // DEVELOPMENT-ONLY RULES (ULTRA PERMISSIVE)
    // Allows any client (authenticated or not) to read and write to the entire database.
    // This is ONLY for debugging connection/environment issues.
    // WARNING: DO NOT use these rules in a production environment.
    // Forcing a redeploy to fix connection issues.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
