rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para Perfiles de Usuario
    match /users/{userId} {
      // Permite la lectura y escritura de perfiles de usuario individuales por cualquier usuario autenticado.
      // Las consultas a la colección 'users' están permitidas si el usuario está autenticado.
      allow read, write: if request.auth != null;
    }

    // Reglas para Viajes
    match /rides/{rideId} {
      // Permite leer y escribir en documentos de viaje individuales.
      // Lo más importante es que 'read' aquí incluye 'list', permitiendo consultas 
      // en la colección 'rides' por cualquier usuario autenticado.
      allow read, write: if request.auth != null;
    }

    // Reglas para Resúmenes de Conductores
    match /driver_summaries/{summaryId} {
      // Permite la lectura y escritura de resúmenes por cualquier usuario autenticado.
      allow read, write: if request.auth != null;
    }
    
    // Reglas para Logs de Auditoría
    match /auditLogs/{logId} {
       // Permite la creación y lectura de logs por cualquier usuario autenticado.
      allow read, write: if request.auth != null;
    }
  }
}
