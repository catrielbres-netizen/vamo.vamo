rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow list: if request.auth != null;
      allow get: if isAdmin() || isOwner(userId);
      allow write: if isAdmin() || isOwner(userId);
    }
    
    match /rides/{rideId} {
      allow list: if request.auth != null;
      allow get: if isAdmin() || isOwner(resource.data.passengerId) || (resource.data.driverId != null && isOwner(resource.data.driverId));
      allow create: if isAdmin() || (request.resource.data.passengerId == request.auth.uid);
      allow update: if isAdmin() || isOwner(resource.data.passengerId) || (resource.data.driverId != null && isOwner(resource.data.driverId));
      allow delete: if isAdmin();
    }

    match /driver_summaries/{summaryId} {
        allow read, write: if isAdmin();
        allow get: if exists(/databases/$(database)/documents/driver_summaries/$(summaryId)) && resource.data.driverId == request.auth.uid;
    }
    
    match /auditLogs/{logId} {
      allow read, create: if isAdmin();
      allow update, delete: if false; // Logs should be immutable
    }
  }
}
