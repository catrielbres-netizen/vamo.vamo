rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to list and read collections, but restrict writes.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /rides/{rideId} {
      // Anyone authenticated can read a specific ride or the whole collection
      allow read: if request.auth != null;
      // Anyone authenticated can write (create, update, delete)
      allow write: if request.auth != null;
    }

    match /driver_summaries/{summaryId} {
      allow read, write: if request.auth != null;
    }

    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    // Fallback for any other path - deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
