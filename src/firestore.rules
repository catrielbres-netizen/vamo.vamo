rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isDriver() {
       return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'driver';
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin() || request.auth.uid == userId;
    }
    
    // Rides
    match /rides/{rideId} {
      // Drivers: view available rides
      allow list: if isDriver() && request.query.where[0][2] == 'searching_driver';

      // Read ride only if participating or admin
      allow get: if isAdmin() || (isSignedIn() && (resource.data.driverId == request.auth.uid || resource.data.passengerId == request.auth.uid));

      // Create ride (passenger)
      allow create: if isSignedIn() && request.resource.data.passengerId == request.auth.uid;

      // Controlled update
      allow update: if isAdmin() || (isDriver() && resource.data.status == 'searching_driver') || (isSignedIn() && (resource.data.driverId == request.auth.uid || resource.data.passengerId == request.auth.uid));

      allow delete: if isAdmin();
    }

    // Driver Summaries
    match /driver_summaries/{summaryId} {
        // Admins can read any summary
        allow read: if isAdmin();
        // Drivers can read their own summaries
        allow read: if exists(/databases/$(database)/documents/driver_summaries/$(summaryId)) && resource.data.driverId == request.auth.uid;
        // Writes are handled by secure backend logic (or admin panel)
        allow write: if isAdmin();
    }
    
    // Audit Logs - Only admins can create and read
    match /auditLogs/{logId} {
      allow read, create: if isAdmin();
      allow update, delete: if false; // Logs should be immutable
    }

  }
}
