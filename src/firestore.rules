rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User Profiles
    match /users/{userId} {
      // An admin or the user can get a specific profile.
      allow get: if isAdmin() || isOwner(userId);
      // ONLY admins can list all users.
      allow list: if isAdmin();
      // An admin or the user can write to their own profile.
      allow write: if isAdmin() || isOwner(userId);
    }
    
    // Rides
    match /rides/{rideId} {
      // An admin, the passenger, or the driver can GET a single ride document.
      allow get: if isAdmin() || isOwner(resource.data.passengerId) || isOwner(resource.data.driverId);
      // ONLY admins can LIST all rides.
      allow list: if isAdmin();
      // Passengers or admins can create rides.
      allow create: if isAdmin() || (request.resource.data.passengerId == request.auth.uid);
      // Involved parties or admins can update.
      allow update: if isAdmin() || isOwner(resource.data.passengerId) || isOwner(resource.data.driverId);
      // Only admins should be able to delete rides.
      allow delete: if isAdmin();
    }

    // Driver Summaries
    match /driver_summaries/{summaryId} {
        // Admins can read/write any summary
        allow read, write: if isAdmin();
        // Drivers can read their own summaries
        allow get: if exists(/databases/$(database)/documents/driver_summaries/$(summaryId)) && resource.data.driverId == request.auth.uid;
    }
    
    // Audit Logs - Only admins can create and read
    match /auditLogs/{logId} {
      allow read, create: if isAdmin();
      allow update, delete: if false; // Logs should be immutable
    }
  }
}
