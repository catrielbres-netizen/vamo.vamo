rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
        return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- USERS ---
    match /users/{userId} {
      // Any authenticated user can create their own profile.
      allow create: if isAuthenticated();

      // Only the owner or an admin can read/update their profile.
      allow get, update, delete: if isOwner(userId) || isAdmin();
      
      // Admins can list all users.
      allow list: if isAdmin();
    }

    // --- RIDES ---
    match /rides/{rideId} {
      // Any authenticated user can create a ride request.
      allow create: if isAuthenticated();

      // Any authenticated user can query the rides collection.
      // The frontend queries will be responsible for filtering (e.g., where('passengerId', '==', uid)).
      allow list: if isAuthenticated();

      // Only the passenger, driver, or an admin can read or update a specific ride.
      allow get, update: if isAuthenticated() && (
        request.auth.uid == resource.data.passengerId ||
        request.auth.uid == resource.data.driverId ||
        isAdmin()
      );
      
      // Deletes are disallowed for now to preserve ride history.
      allow delete: if false;
    }

    // --- DRIVER SUMMARIES ---
    match /driver_summaries/{summaryId} {
        // Any authenticated user can create/update their summary.
        allow create, update: if isAuthenticated();

        // Drivers can read their own summaries, Admins can read any summary.
        allow get: if isAuthenticated() && (
            resource.data.driverId == request.auth.uid ||
            isAdmin()
        );

        // Admins can list all summaries.
        allow list: if isAdmin();
    }
    
    // --- AUDIT LOGS ---
    match /auditLogs/{logId} {
       // Only admins can read or write audit logs.
      allow read, write: if isAdmin();
    }
  }
}
