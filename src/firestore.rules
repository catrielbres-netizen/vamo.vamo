rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla de desarrollo permisiva:
    // Permite la lectura y escritura a cualquier usuario que est√© autenticado.
    // Esto elimina los problemas de permisos durante el desarrollo.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
