rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read and write their own profile data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /rides/{rideId} {
      // ANY authenticated user can create a ride document (passengers).
      allow create: if request.auth != null && request.resource.data.passengerId == request.auth.uid;
      
      // A ride is only readable by the passenger who created it, or the driver assigned to it.
      allow read: if request.auth != null && (resource.data.passengerId == request.auth.uid || resource.data.driverId == request.auth.uid);
      
      // A ride can only be updated by the passenger or the assigned driver.
      // Drivers can accept a ride by updating it.
      allow update: if request.auth != null && (resource.data.passengerId == request.auth.uid || resource.data.driverId == request.auth.uid || request.resource.data.driverId == request.auth.uid);
    }
    
    // Drivers can list rides that are currently searching for a driver.
    match /rides/{rideId} {
        allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'driver';
    }
    
    // Admin Override: An admin can read/write any document in the database.
    match /{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
