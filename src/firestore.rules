rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // User Profiles
    match /users/{userId} {
      // Allow any authenticated user to list users (temporary for development)
      allow list: if isAuthenticated();
      // An authenticated user can read their own profile, or an admin can read any profile.
      allow get: if request.auth.uid == userId || isAdmin();
      // An admin or the user themselves can write to the profile.
      allow write: if isAdmin() || request.auth.uid == userId;
    }
    
    // Rides
    match /rides/{rideId} {
      // Allow any authenticated user to list rides (temporary for development)
      allow list: if isAuthenticated();
      // Passengers, drivers involved, or admins can read a single ride.
      allow get: if isAdmin() || (resource.data.passengerId == request.auth.uid || resource.data.driverId == request.auth.uid);
      // Passengers can create rides. Admins can also create rides.
      allow create: if isAdmin() || request.resource.data.passengerId == request.auth.uid;
      // Involved parties or admins can update.
      allow update: if isAdmin() || (resource.data.passengerId == request.auth.uid || resource.data.driverId == request.auth.uid);
      // Only admins should be able to delete rides.
      allow delete: if isAdmin();
    }

    // Driver Summaries
    match /driver_summaries/{summaryId} {
        // Admins can read any summary.
        allow read: if isAdmin();
        // Drivers can read their own summaries.
        allow read: if exists(/databases/$(database)/documents/driver_summaries/$(summaryId)) && resource.data.driverId == request.auth.uid;
        // Writes are handled by secure backend logic (or admin panel).
        allow write: if isAdmin();
    }
    
    // Audit Logs - Only admins can create and read
    match /auditLogs/{logId} {
      allow read, create: if isAdmin();
      allow update, delete: if false; // Logs should be immutable
    }

    // Fallback: Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
