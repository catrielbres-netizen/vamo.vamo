rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read and write to the main collections.
    // This is still very permissive and should be secured before production.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /rides/{rideId} {
      allow read, write: if request.auth != null;
    }

    match /driver_summaries/{summaryId} {
      allow read, write: if request.auth != null;
    }

    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    // Fallback for any other path - deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
