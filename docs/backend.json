
{
  "entities": {
    "Ride": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Ride",
      "type": "object",
      "description": "Represents a ride request and its lifecycle within the VamO app.",
      "properties": {
        "passengerId": {
          "type": "string",
          "description": "The unique identifier of the passenger who requested the ride."
        },
        "passengerName": {
          "type": [
            "string",
            "null"
          ],
          "description": "The name of the passenger."
        },
        "origin": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            }
          },
          "required": [
            "lat",
            "lng"
          ],
          "description": "The origin coordinates of the ride."
        },
        "destination": {
          "type": "object",
          "properties": {
            "address": {
              "type": "string"
            },
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            }
          },
          "required": [
            "address",
            "lat",
            "lng"
          ],
          "description": "The destination details of the ride."
        },
        "serviceType": {
          "type": "string",
          "enum": [
            "premium",
            "privado",
            "express"
          ]
        },
        "pricing": {
          "type": "object",
          "properties": {
            "estimatedTotal": {
              "type": "number"
            },
            "finalTotal": {
              "type": ["number", "null"]
            },
            "estimatedDistanceMeters": {
              "type": "number"
            }
          },
          "required": [
            "estimatedTotal",
            "estimatedDistanceMeters"
          ],
          "description": "Pricing details for the ride."
        },
        "status": {
          "type": "string",
          "enum": [
            "searching_driver",
            "driver_assigned",
            "driver_arriving",
            "arrived",
            "in_progress",
            "paused",
            "finished",
            "cancelled"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the ride was created."
        },
        "updatedAt": {
          "type": "string",
  "format": "date-time",
          "description": "Timestamp of when the ride was last updated."
        },
        "finishedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Timestamp of when the ride was finished."
        },
        "driverId": {
          "type": [
            "string",
            "null"
          ],
          "description": "The unique identifier of the driver assigned to the ride."
        },
        "pauseStartedAt": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Timestamp of when the current pause started."
        },
        "pauseHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "started": {
                "type": "string",
                "format": "date-time"
              },
              "ended": {
                "type": "string",
                "format": "date-time"
              },
              "duration": {
                "type": "number"
              }
            }
          },
          "description": "A history of pause events during the ride."
        },
        "passengerRating": {
          "type": ["number", "null"],
          "description": "Rating given by the driver to the passenger (e.g., 1-5)."
        },
        "driverRating": {
          "type": ["number", "null"],
          "description": "Rating given by the passenger to the driver (e.g., 1-5)."
        },
        "passengerComments": {
            "type": ["string", "null"],
            "description": "Comments from the driver about the passenger."
        },
        "driverComments": {
            "type": ["string", "null"],
            "description": "Comments from the passenger about the driver."
        }
      },
      "required": [
        "passengerId",
        "origin",
        "destination",
        "serviceType",
        "pricing",
        "status",
        "createdAt",
        "updatedAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/rides/{rideId}",
        "definition": {
          "entityName": "Ride",
          "schema": {
            "$ref": "#/backend/entities/Ride"
          },
          "description": "Represents a ride request and its lifecycle."
        }
      }
    ]
  }
}
