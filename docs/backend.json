
{
  "entities": {
    "Ride": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Ride",
      "type": "object",
      "description": "Represents a ride request and its lifecycle within the VamO app.",
      "properties": {
        "passengerId": {
          "type": "string",
          "description": "The unique identifier of the passenger who requested the ride."
        },
        "passengerName": {
          "type": [
            "string",
            "null"
          ],
          "description": "The name of the passenger."
        },
        "origin": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            }
          },
          "required": [
            "lat",
            "lng"
          ],
          "description": "The origin coordinates of the ride."
        },
        "destination": {
          "type": "object",
          "properties": {
            "address": {
              "type": "string"
            },
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            }
          },
          "required": [
            "address",
            "lat",
            "lng"
          ],
          "description": "The destination details of the ride."
        },
        "serviceType": {
          "type": "string",
          "enum": [
            "premium",
            "privado",
            "express"
          ]
        },
        "pricing": {
          "type": "object",
          "properties": {
            "estimatedTotal": {
              "type": "number"
            },
            "finalTotal": {
              "type": ["number", "null"]
            },
            "estimatedDistanceMeters": {
              "type": "number"
            },
            "discountAmount": {
              "type": ["number", "null"],
              "description": "The amount discounted from the ride, covered by the app."
            }
          },
          "required": [
            "estimatedTotal",
            "estimatedDistanceMeters"
          ],
          "description": "Pricing details for the ride."
        },
        "status": {
          "type": "string",
          "enum": [
            "searching_driver",
            "driver_assigned",
            "driver_arriving",
            "arrived",
            "in_progress",
            "paused",
            "finished",
            "cancelled"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the ride was created."
        },
        "updatedAt": {
          "type": "string",
  "format": "date-time",
          "description": "Timestamp of when the ride was last updated."
        },
        "finishedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Timestamp of when the ride was finished."
        },
        "driverId": {
          "type": [
            "string",
            "null"
          ],
          "description": "The unique identifier of the driver assigned to the ride."
        },
        "pauseStartedAt": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Timestamp of when the current pause started."
        },
        "pauseHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "started": {
                "type": "string",
                "format": "date-time"
              },
              "ended": {
                "type": "string",
                "format": "date-time"
              },
              "duration": {
                "type": "number"
              }
            }
          },
          "description": "A history of pause events during the ride."
        },
        "passengerRating": {
          "type": ["number", "null"],
          "description": "Rating given by the driver to the passenger (e.g., 1-5)."
        },
        "driverRating": {
          "type": ["number", "null"],
          "description": "Rating given by the passenger to the driver (e.g., 1-5)."
        },
        "passengerComments": {
            "type": ["string", "null"],
            "description": "Comments from the driver about the passenger."
        },
        "driverComments": {
            "type": ["string", "null"],
            "description": "Comments from the passenger about the driver."
        },
        "vamoPointsAwarded": {
            "type": ["number", "null"],
            "description": "Vamo points awarded to the passenger for this ride."
        }
      },
      "required": [
        "passengerId",
        "origin",
        "destination",
        "serviceType",
        "pricing",
        "status",
        "createdAt",
        "updatedAt"
      ]
    },
    "UserProfile": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "User Profile",
        "type": "object",
        "description": "Stores public profile information for a user (passenger or driver).",
        "properties": {
          "name": {
            "type": "string",
            "description": "The user's display name."
          },
          "photoURL": {
            "type": ["string", "null"],
            "format": "uri",
            "description": "URL of the user's profile picture."
           },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the profile was created."
          },
          "vamoPoints": {
            "type": "number",
            "description": "Total accumulated Vamo points (for passengers)."
          },
          "averageRating": {
            "type": ["number", "null"],
            "description": "The user's average rating as a passenger or driver."
          },
          "ridesCompleted": {
            "type": "number",
            "description": "Total number of completed rides (as passenger or driver)."
          },
          "activeBonus": {
            "type": "boolean",
            "description": "Whether the user has an active 10% discount bonus."
          },
          "isDriver": {
            "type": "boolean",
            "description": "Indicates if the user is a driver."
          },
          "carModelYear": {
            "type": ["number", "null"],
            "description": "The model year of the driver's car."
          },
           "vehicleVerificationStatus": {
              "type": "string",
              "enum": ["unverified", "pending_review", "approved", "rejected"],
              "description": "The verification status of the driver's vehicle."
            }
        },
        "required": ["name", "createdAt", "vamoPoints", "ridesCompleted", "activeBonus"]
      },
      "DriverSummary": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Driver Summary",
        "type": "object",
        "description": "Stores weekly financial summary for a driver.",
        "properties": {
            "driverId": {
                "type": "string",
                "description": "The unique identifier of the driver."
            },
            "weekId": {
                "type": "string",
                "description": "Identifier for the week, e.g., '2024-W28'."
            },
            "totalEarnings": {
                "type": "number",
                "description": "Total gross earnings for the week."
            },
            "commissionOwed": {
                "type": "number",
                "description": "The commission owed to the app, calculated based on the variable rate."
            },
            "commissionRate": {
                "type": "number",
                "description": "The commission rate applied for this week (e.g., 0.08 for 8%)."
            },
            "bonusesApplied": {
                "type": "number",
                "description": "Total amount of passenger discounts covered by the app."
            },
            "status": {
                "type": "string",
                "enum": ["pending", "paid"],
                "description": "The payment status of the commission."
            },
            "updatedAt": {
                "type": "string",
                "format": "date-time",
                "description": "Timestamp of when the summary was last updated."
            }
        },
        "required": ["driverId", "weekId", "totalEarnings", "commissionOwed", "commissionRate", "status", "updatedAt", "bonusesApplied"]
      }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/rides/{rideId}",
        "definition": {
          "entityName": "Ride",
          "schema": {
            "$ref": "#/backend/entities/Ride"
          },
          "description": "Represents a ride request and its lifecycle."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores public profile information for a user."
        }
      },
      {
        "path": "/driver_summaries/{summaryId}",
        "definition": {
            "entityName": "DriverSummary",
            "schema": {
                "$ref": "#/backend/entities/DriverSummary"
            },
            "description": "Stores a driver's weekly financial summary."
        }
      }
    ]
  }
}
