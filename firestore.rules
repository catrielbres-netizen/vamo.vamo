rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /rides/{rideId} {
      // Los pasajeros pueden crear viajes.
      allow create: if request.auth != null;
      
      // Los conductores pueden listar viajes que buscan conductor.
      allow list: if request.auth != null && resource.data.status == 'searching_driver';

      // El pasajero y el conductor asignado pueden leer el viaje.
      allow read: if request.auth != null && (request.auth.uid == resource.data.passengerId || request.auth.uid == resource.data.driverId);

      // El pasajero puede actualizar su propio viaje (ej: para cancelar).
      // Un conductor puede aceptar un viaje que est√° buscando conductor.
      // Un conductor asignado puede actualizar el viaje.
      allow update: if request.auth != null && (
        (resource.data.status == 'searching_driver' && request.resource.data.status == 'driver_assigned') || // Driver accepting ride
        (request.auth.uid == resource.data.passengerId) || // Passenger updating (e.g., cancelling)
        (request.auth.uid == resource.data.driverId) // Assigned driver updating
      );

      // Nadie puede eliminar viajes, solo se cancelan.
      allow delete: if false;
    }
  }
}
