rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /rides/{rideId} {
      // Los pasajeros pueden crear viajes.
      allow create: if request.auth != null;
      
      // Los conductores pueden listar viajes que buscan conductor.
      // TEMPORAL: Permitir a cualquier usuario autenticado listar viajes para la limpieza.
      allow list: if request.auth != null;

      // El pasajero y el conductor asignado pueden leer el viaje.
      // TEMPORAL: Permitir a cualquier usuario autenticado leer para la limpieza.
      allow read: if request.auth != null;

      // TEMPORAL: Permitir a cualquier usuario autenticado actualizar cualquier viaje.
      // Esto es para permitir que el bot√≥n "Finalizar Todos" funcione.
      allow update: if request.auth != null;

      // Nadie puede eliminar viajes, solo se cancelan.
      allow delete: if false;
    }
  }
}
